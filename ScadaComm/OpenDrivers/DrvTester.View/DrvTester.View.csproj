  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(SharedPath)\**\*.cs" LinkBase="\" />
  </ItemGroup>

  <PropertyGroup>
    <OuterPath>..\..\..\scada-v6\ScadaComm\OpenDrivers\DrvTester.View</OuterPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(OuterPath)\**\*.cs" Exclude="$(OuterPath)\obj\**;$(OuterPath)\bin\**" LinkBase="\" />
